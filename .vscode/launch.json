{
  // Use IntelliSense to find out which attributes exist for node debugging
  // Use hover for the description of the existing attributes
  // For further information visit https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceRoot}",
      "args": ["--compilers", "js:babel-register", "--recursive"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "smartStep": false,
      "skipFiles": [
        "node_modules/lodash/**/*"
      ]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceRoot}",
      "args": ["--compilers", "js:babel-register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "smartStep": false

    },

    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceRoot}/.vscode/debug.js",
      "cwd": "${workspaceRoot}",
      "args": ["fac.json", "-l", "languages/c", "-l", "languages/c-like"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "smartStep": false,
      "skipFiles": [
        "node_modules/lodash/**/*"
      ]

    }
  ]
}